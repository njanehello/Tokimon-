<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title> CMPT276 Assignment 2 </title>
    <link rel="stylesheet" href="/stylesheets/modify.css" type="text/css" media="all">
    <script type="text/javascript" src="/js/tokimon.js" defer> </script>
</head>
<body>
    <div id="backgroundDiv">

        <div class="card" id="cardRegion">

                <div id="cardMid">
                    <form id="form" action="/update" method="post">
                        
                            <table id="nameTable">
                            <tr>
                                <th class="headerRow" id="modifyNameHeader" >Tokimon ID</th>
            
                            </tr>
                            <table id=trainerTable>
                                    <tr>
                                        <th class="headerRow" id="modifyTotalTrainerNameHeader">Trainer Name</th>
                                    </tr>
                                    <tr>
                                        <td class="dataRow" id="modifyTotalTrainerNameData"><input class="inputs" id="inputTrainerName" type="text" name="trainerName" required value=<%=rows[0].trainername%> ></td>
                                    </tr>
                            </table>
                            <table id="nameTable1">
                                    <tr>
                                        <th class="headerRow" id="modifyNameHeader" >Tokimon Name</th>
                                    </tr>
                            <tr>
                                <td class="dataRow" id="modifyNameData"><input class="inputs" id="inputID" type="number" name="tid" readonly value=<%= rows[0].tid %>></td>
                                <td class="dataRow" id="modifyNameData"><input class="inputs" id="inputName" type="text" name="name" required value=<%= rows[0].name %>></td>
                            </tr>
                            </table>

                            <table id="formTable">
                            <tr>
                                <th class="headerRow" id="modifyHeightWeightHeader">Weight</th>
                                <th class="headerRow" id="modifyHeightWeightHeader">Height</th>
                            </tr>

                            <tr>
                                <td class="dataRow" id="modifyHeightWeightData"><input class="inputs" id="inputHeight" type="number" name="height" value=<%=rows[0].height%> pattern="[0-9]" min="1"></td>
                                <td class="dataRow" id="modifyHeightWeightData"><input class="inputs" id="inputWeight" type="number" name="weight" value=<%=rows[0].weight%> pattern="[0-9]" min="1"></td>
                            </tr>

                            <tr>
                                <th class="headerRow" id="modifyFlyingFightingHeader">Fly</th>
                            </tr>

                            <tr>
                                <td class="dataRow" id="modifyFlyingFightingData"><input class="inputs" id="inputFlying" type="number" name="flying" value=<%=rows[0].flying%> pattern="[0-9]" min="0" max="100"></td>
                                <td class="dataRow" id="modifyFlyingFightingData"><input class="inputs" id="inputFighting" type="number" name="fighting" value=<%=rows[0].fighting%> pattern="[0-9]" min="0" max="100"></td>
                            </tr>

                            <tr>
                                <th class="headerRow" id="modifyFireWaterHeader">Fire</th>
                                <th class="headerRow" id="modifyFireWaterHeader">Water</th>
                            </tr>

                            <tr>
                                <td class="dataRow" id="modifyFireWaterData"><input class="inputs" id="inputFire" type="number" name="fire" value=<%=rows[0].fire%> pattern="[0-9]" min="0" max="100"></td>
                                <td class="dataRow" id="modifyFireWaterData"><input class="inputs" id="inputWater" type="number" name="water" value=<%=rows[0].water%> pattern="[0-9]" min="0" max="100"></td>
                            </tr>

                            <tr>
                                <th class="headerRow" id="modifyElectricIceHeader">Electric</th>
                                <th class="headerRow" id="modifyElectricIceHeader">Frozen</th>
                            </tr>

                            <tr>
                                <td class="dataRow" id="modifyElectricIceData"><input class="inputs" id="inputElectric" type="number" name="electric" value=<%=rows[0].electric%> pattern="[0-9]" min="0" max="100"></td>
                                <td class="dataRow" id="modifyElectricIceData"><input class="inputs" id="inputIce" type="number" name="ice" value=<%=rows[0].ice%> pattern="[0-9]" min="0" max="100"></td>
                            </tr>
                            </table>

                            <table id=totalTable>
                            <tr>
                                <th class="headerRow" id="modifyTotalTrainerNameHeader">Total</th>
                            </tr>
                            <tr>
                                <td class="dataRow" id="modifyTotalTrainerNameData"><input class="inputs" id="inputPrimary" type="text" name="element" readonly></td>
                                <td class="dataRow" id="modifyTotalTrainerNameData"><input class="inputs" id="inputTotal" type="number" name="total" value=<%=rows[0].total%> pattern="[0-9]" min="0" max="600" readonly></td>
                            </tr>
                            </table>

                            <br>
                        <button class="submitButtons" id="submitButton" type="submit"> Submit </button>
                    </form>
                </div>

                <div class="cardButtom" id="cardButtom">
                    <% if (rows[0].flying > Math.max(rows[0].fighting, rows[0].fire, rows[0].water, rows[0].electric, rows[0].ice)) { %>
                        <p>
                            Flying-type Tokimons have an advantage over fighting-type Tokimons, but are weak
                            against ice-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Flying"; </script>
                    <% } else if (rows[0].fighting > Math.max(rows[0].flying, rows[0].fire, rows[0].water, rows[0].electric, rows[0].ice)) { %>
                        <p>
                            Fighting-type Tokimons have an advantage over electric-type Tokimons, but are weak
                            against flying-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Fighting"; </script>
                    <% } else if (rows[0].fire > Math.max(rows[0].flying, rows[0].fighting, rows[0].water, rows[0].electric, rows[0].ice)) { %>
                        <p>
                            Fire-type Tokimons have an advantage over ice-type Tokimons, but are weak
                            against water-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Fire"; </script>
                    <% } else if (rows[0].water > Math.max(rows[0].flying, rows[0].fighting, rows[0].fire, rows[0].electric, rows[0].ice)) { %>
                        <p>
                            Water-type Tokimons have an advantage over fire-type Tokimons, but are weak
                            against electric-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Water"; </script>
                    <% } else if (rows[0].electric > Math.max(rows[0].flying, rows[0].fighting, rows[0].fire, rows[0].water, rows[0].ice)) { %>
                        <p>
                            Electric-type Tokimons have an advantage over water-type Tokimons, but are weak
                            against fighting-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Electric"; </script>
                    <% } else if (rows[0].ice > Math.max(rows[0].flying, rows[0].fighting, rows[0].fire, rows[0].water, rows[0].electric)) { %>
                        <p>
                            Ice-type Tokimons have an advantage over flying-type Tokimons, but are weak
                            against fire-type Tokimons.
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Ice"; </script>
                    <% } else { %>
                        <p>
                            This Tokimon is equally strong in multiple elements and will be very strong in battle!
                        </p>
                        <script> document.querySelector("#inputPrimary").value = "Multiple"; </script>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>